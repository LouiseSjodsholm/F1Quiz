@model F1Quiz.Models.ViewModels.TotalLeaderboardViewModel

<div class="container mt-4">
    <h2 class="mb-3">Samlet resultat</h2>
    <p class="text-muted">Kumulative resultater for alle løb</p>

    @if (Model.UserScores.Any())
    {
        <table class="table table-bordered table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Placering</th>
                    <th scope="col">Bruger</th>
                    <th scope="col">Samlet Score</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.UserScores.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model.UserScores[i].UserName</td>
                        <td>@Model.UserScores[i].TotalScore</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">Ingen scorer tilgængelige endnu.</p>
    }
</div>
