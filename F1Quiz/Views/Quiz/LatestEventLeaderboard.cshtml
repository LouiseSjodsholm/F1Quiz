@model F1Quiz.Models.ViewModels.EventLeaderboardViewModel

@{
    Layout = "_Layout";
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-3">@Model.RaceName - Leaderboard</h2>
        <p class="text-muted">@Model.RaceDate.ToString("MMMM dd, yyyy")</p>

        @if (Model.UserScores.Any())
        {
            <table class="table table-bordered table-hover mt-4">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Score</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.UserScores.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.UserScores[i].UserName</td>
                            <td>@Model.UserScores[i].Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center text-muted">No scores available for this event yet.</p>
        }
    </div>
}
